<body>

  <h1>ðŸ“¦ Daftar Barang</h1>

  <div class="table-container">
    <table id="dataTable">
      <thead>
        <tr>
          <th>Nama</th>
          <th>Item</th>
          <th>Qty</th>
        </tr>
      </thead>
      <tbody id="tableBody">
        <tr><td colspan="3" class="loading">Memuat data...</td></tr>
      </tbody>
    </table>
  </div>

  <script>
    async function loadData() {
      const url = "https://api.sheetbest.com/sheets/498acd7a-ed95-4b05-8700-de1d79567933";
      const tbody = document.getElementById("tableBody");

      try {
        const res = await fetch(url);
        const data = await res.json();
        tbody.innerHTML = "";

        if (data.length === 0) {
          tbody.innerHTML = "<tr><td colspan='3' style='text-align:center;'>Tidak ada data</td></tr>";
          return;
        }

        data.forEach(row => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
            <td>${row.Nama || '-'}</td>
            <td>${row.Item || '-'}</td>
            <td>${row.Qty || '-'}</td>
          `;
          tbody.appendChild(tr);
        });
      } catch (error) {
        tbody.innerHTML = "<tr><td colspan='3' style='color:red; text-align:center;'>Gagal memuat data</td></tr>";
        console.error("Error:", error);
      }
    }

    loadData();
  </script>

</body>
